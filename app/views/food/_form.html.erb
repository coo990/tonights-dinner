<%= form_for :food do |form| %>
  <div class="form-group">
    <%= form.label "What did you have tonight?" %><br>
    <%= form.text_field :title, class: "form-control" %>
    <% @food.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label "Notes" %><br>
    <%= form.text_area :body, class: "form-control" %><br>
    <% @food.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-dark"%>
  </div>
<% end %>
