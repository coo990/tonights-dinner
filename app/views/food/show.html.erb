<h2 align="center"><%= @food.title %></h2>
<div class="show">
  <h4>Notes:</h4>
  <p class="body-box"><%= @food.body %></p>
  <%= link_to "Edit", edit_food_path(@food), class: "btn btn-primary"%> | 
  <%= link_to "Home", root_path, class: "btn btn-success "%> | 
  <%= link_to "Delete", food_path(@food), method: :delete,
    data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>

  <br><p class="created-box">Created at <%= @food.created_at.strftime("%d/%m/%Y")%></p>
</div>