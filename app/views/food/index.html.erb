<div class="header">
  
  <h1>Tonight's Dinner</h1>
  <br>
</div>
<div>
  <ul>
      <div class="add-button">
        <%= link_to "ADD +", new_food_path, class: "btn btn-default" %>
      </div>
      <div class="food-list">
        <% @foods.each do |food| %>
          <div class="card-body">
            <div class="row">
              <div class="col-xs-8 col-xs-offset-2">
                <div class="well well-lg">
                  <%= food.created_at.strftime("%d/%m") %>
                  <%= link_to food.title, food %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <li>
        <%# 12/10 <%= link_to "Jollof Rice" %>
        </li>
      </div>
  </ul>
</div>
